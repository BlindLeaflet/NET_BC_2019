@model UserModel
@{
    ViewData["Title"] = "SignUp";
}

<h2>SignUp</h2>
<div>
    @Html.ValidationSummary()
</div>
<div>
    <form class="form-horizontal" action="SignUp" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input asp-for="Email"  class="form-control" id="exampleInputEmail1"  placeholder="Email" />
        </div>
        <div class="form-group">
            <label for="exampleInputEmail2">Repeate Email address</label>
            <input asp-for="EmailRepeat" class="form-control" id="exampleInputEmail2" placeholder="Email" />
            
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>            
            <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password" /> 
        </div>
        <div class="form-group">
            <label for="exampleInputPassword2">Repeate Password</label>
            <input asp-for="PasswordRepeat" class="form-control" id="exampleInputPassword2" placeholder="Password" />
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
